# Production Environment Configuration

# Окружение
ENVIRONMENT=production

# 2FA для админов (false = отключено, true = включено)
REQUIRE_2FA=false

# MongoDB
MONGO_URI=mongodb://admin:password@host.docker.internal:27017/?authSource=admin
MONGO_DB_NAME=royal

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=Royal_Redis_1337
REDIS_DB=1
REDIS_MULTIPLAYER_DB=2

# JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=31

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
SUPER_ADMIN_IDS=123456789

# PDD Categories
pdd_categories=["A","B","C","D"]
max_file_size_mb=10
allowed_media_types=["image/jpeg","image/png","video/mp4"]
DEFAULT_REFERRAL_RATE=5

# Media Settings
MEDIA_BASE_PATH=video_test
MEDIA_X_ACCEL_PREFIX=/media
MEDIA_MAX_FILE_SIZE_MB=50
